from langchain.tools import tool
from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager
import time
import os

class MyScrapingTool:
    @staticmethod
    @tool("Scrape website content")
    def scrape_website(url):
        """
        Scrapes content from a website.

        Args:
            url (str): The URL of the website to scrape.

        Returns:
            str: The scraped content.
        """
        options = webdriver.ChromeOptions()
        options.headless = True
        options.add_argument("--start-maximized")
        service = Service(ChromeDriverManager().install())
        driver = webdriver.Chrome(service=service, options=options)

        try:
            driver.get(url)
            time.sleep(5)

            # Calculate the total height of the page
            total_height = driver.execute_script("return document.body.parentNode.scrollHeight")
            driver.set_window_size(1920, total_height)  # Set the window size to the total height
            time.sleep(2)  # Wait for the page to load after resizing

            # Scrape content
            content = driver.page_source

            return content[:5000]

        except Exception as e:
            return f"An error occurred: {e}"

        finally:
            driver.quit()

# Example of usage
# my_tool = MyScrapingTool()
# result = my_tool.scrape_website("https://example.com")
# print(result)
