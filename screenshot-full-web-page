import pandas as pd
from langchain.tools import tool
from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager
import time
import os

class MyScreenshotTool:
    @staticmethod
    @tool("Take website screenshots")
    def take_screenshots_from_excel(file_path, save_path):
        """
        Takes screenshots of websites listed in an Excel file.

        Args:
            file_path (str): The path to the Excel file containing URLs.
            save_path (str): The directory path where screenshots will be saved.

        Returns:
            list: A list of file paths to the saved screenshots.
        """
        options = webdriver.ChromeOptions()
        options.headless = True
        options.add_argument("--start-maximized")
        service = Service(ChromeDriverManager().install())
        driver = webdriver.Chrome(service=service, options=options)

        try:
            # Read URLs from Excel file
            df = pd.read_excel(file_path)
            urls = df['competitors URL\'s'].tolist()

            screenshot_paths = []

            for idx, url in enumerate(urls):
                driver.get(url)
                time.sleep(5)

                # Take screenshot
                screenshot_path = os.path.join(save_path, f"screenshot_{idx + 1}.png")
                driver.save_screenshot(screenshot_path)
                screenshot_paths.append(screenshot_path)

            return screenshot_paths

        except Exception as e:
            return f"An error occurred: {e}"

        finally:
            driver.quit()

# Set the file path to the Excel file containing URLs
file_path = "path/to/your/excel/file.xlsx"  # Replace with the actual file path

# Set the directory path where screenshots will be saved
save_path = "path/to/save/screenshots"  # Replace with the actual save path

# Create an instance of MyScreenshotTool
my_tool = MyScreenshotTool()

# Call the take_screenshots_from_excel method with the file path and save path
result = my_tool.take_screenshots_from_excel(file_path, save_path)

# Print the file paths to the saved screenshots
print(result)
